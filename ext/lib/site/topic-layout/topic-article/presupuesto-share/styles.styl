.presupuesto-share.pendiente
  max-width: 350px
  min-width: 250px
  margin: 0 auto
  font-family: 'Roboto','Helvetica Neue', Helvetica, Arial, sans-serif
  position: relative
  .sharer-pending
    background: #f2f2f2
    color: rgb(67,67,71)
    min-height: 120px
    display: flex
    flex-direction: column
    justify-content: flex-end
    align-items: center
    padding: 25px 0
    .pending-header
      display: flex
      justify-content: center
      align-items: baseline
      width: 100%
      font-size: 24px
      .presupuesto
        font-weight: 500
      .numero-proyecto
        background: #f8951a
        color: white
        padding: 3px 6px
        position: absolute
        font-size: 17px
        top: 0
        right: 0
      
    .pending-body
      display: flex
      flex-direction: column
      align-items: center
      .presu-proyecto
        margin: 20px 0 15px
        font-weight: 500
        font-size: 48px
        color: rgb(0,175,239)
      .not-logged-body
        display: flex
        flex-direction: column
      .btn-pending
        color: #fff
        background-color: rgb(32,199,89)
        padding: 15px 20px
        border: 1px solid rgb(32,199,89)
        border-radius: 8px
        text-transform: uppercase
        font-weight: 700
      .register-text
        font-weight: 500
        text-align: center
        margin-top: 16px
        margin-bottom: 0px
      .no-vote-msj
        padding: 0 10px
        font-size: 15px
        color: #555
  .social-links
    background-color: #f7941d
    color: #fff
    display: flex
    justify-content: center
    align-items: center
    padding: 15px
    .hashtag
      font-size: 20px
    a
      width: 35px
      height: 20px
      background-size: auto 20px
      background-repeat: no-repeat
      background-position: center
      display: inline-block
    span
      .fb-share
        width: 30px
        height: 20px
        margin: 0 4px 2px 7px
        background-size: auto 20px
        background-repeat: no-repeat
        background-position: center
        display: inline-block
        background-image: unquote("url('/ext/lib/site/topic-layout/fb-icon.svg')")
    a.tw
      background-image: unquote("url('/ext/lib/site/topic-layout/tw-icon.svg')")
      margin-bottom: 1px
      
.presupuesto-share.ganador
  max-width: 450px
  min-width: 250px
  margin: 0 auto
  font-family: 'Roboto', 'Helvetica Neue', Helvetica, Arial, sans-serif
  .box-header
    display: flex
    justify-content: center
    align-items: center
    padding: 15px 10px
    background-color: #00afef
    color: #ffffff
    font-size: 20px
    text-transform: uppercase
  .box-content
    position: relative
    display: flex
    justify-content: space-around
    justify-content: space-evenly
    align-items: center
    flex-wrap: wrap
    padding: 10px 0
    background-color: #f2f2f2
    .box-content-item
      display: flex
      flex-direction: column
      align-items: center
      justify-content: center
      margin: 5px 10px
      .box-content-bold
        font-weight: 500
      .box-content-title
        font-weight: 500
        font-size: 22px
        color: #434347
      .box-content-info
        color: #00afef
        font-weight: 500
        font-size: 48px
      .presu-proyecto
        margin: 10px 0px
      .numero-proyecto
        background: #f8951a
        color: white
        padding: 3px 6px
        position: absolute
        font-size: 17px
        top: 0
        right: 0
  .box-footer
    display: flex
    justify-content: center
    align-items: center
    padding: 15px 10px
    background-color: #f7941d
    color: #ffffff
    .hashtag
      font-size: 20px
      margin-right: 9px
    a
      margin: 0 9px
    a.fb
      width: 24px
      height: 22px
      background: unquote("url('/ext/lib/site/topic-layout/fb-icon.svg')") no-repeat center
      background-size: contain
      margin-bottom: 1px
    a.tw
      width: 24px
      height: 25px
      background: unquote("url('/ext/lib/site/topic-layout/tw-icon.svg')") no-repeat center
      background-size: contain