@import '../../../../../lib/site/home-presupuesto/topic-card/styles'
@import './confirmacion/styles'
@import './first-vote/styles'
@import './second-vote/styles'
@import './vote-joven/styles'

.modal-wrapper
    position: fixed
    width: 100vw
    height: 100vh
    z-index: 50
    
  .overlay
    height: 100%
    width: 100%
    background-color: #fff
    opacity: .5
    z-index: 75

  .modal-dialog
    margin-left: -300px
    margin-top: -900px
    padding: 16px
    position: absolute
    left: 50%
    top: 50%
    background-color: #fff
    z-index: 99
    -webkit-box-shadow: 0px 2px 4px 1px rgba(0,0,0,0.33)
    -moz-box-shadow: 0px 2px 4px 1px rgba(0,0,0,0.33)
    box-shadow: 0px 2px 4px 1px rgba(0,0,0,0.33)
    @media screen and (max-width: 550px)
      width: 340px
      margin-left: -170px
    
    .close-modal
      padding: 2px 8px
      color: #1daeec
      border: 2px solid #1daeec
      border-radius: 50px
      text-align: center
      font-size: 18px
      font-weight: 400
      cursor: pointer 
      float: right
      &:hover
        color: #1daeec
    
    .form-component-wrapper
      display: flex
      flex-direction: column
      align-items: center
      margin: 0 auto
      clear: both
      max-width: 370px
      @media screen and (max-width: 550px)
        max-width: 300px
      .btn-pending
        color: #fff
        background-color: rgb(32,199,89)
        padding: 15px 20px
        border: 1px solid rgb(32,199,89)
        border-radius: 8px
        text-transform: uppercase
        font-weight: 700