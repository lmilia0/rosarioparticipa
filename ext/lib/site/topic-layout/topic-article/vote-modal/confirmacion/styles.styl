.modal-confirmation
    padding: 10px 10px 30px
    background-color: #fff
    z-index: 99
    -webkit-box-shadow: 0px 2px 4px 1px rgba(0,0,0,0.33)
    -moz-box-shadow: 0px 2px 4px 1px rgba(0,0,0,0.33)
    box-shadow: 0px 2px 4px 1px rgba(0,0,0,0.33)
    @media screen and (max-width: 550px)
      width: 310px
      margin: 0 auto
    
    .close-modal
      padding: 2px 8px
      color: #1daeec
      border: 2px solid #1daeec
      border-radius: 50px
      text-align: center
      font-size: 18px
      font-weight: 400
      cursor: pointer 
      float: right
      &:hover
        color: #1daeec
        
    .confirmation-wrapper
      display: flex
      flex-wrap: wrap
      flex-direction: column
      text-align: center
      justify-content: center
      align-items: center
      padding: 0
      margin-top: 50px
      .vote-img
        background-image: unquote("url('/ext/lib/site/topic-layout/topic-article/vote-modal/confirmacion/voto.svg')")
        height: 150px
        width: 180px
        margin: 20px 0
      .confirmation-title
        color: #15cd6c
        font-size: 36px
        font-weight: 500
        line-height: 1.1
        margin: 0
        @media screen and (max-width: 550px)
          font-size: 24px
      p
        font-size: 1.2em
        color: rgba(0,0,0,0.5)
      .return
        color: rgba(0,0,0,0.5)
        cursor: pointer
        display: block
        font-weight: 200
        margin: 10px 0
        text-align: center
        text-decoration: underline
        width: 100%
        font-size: 0.9em
      .social-sharing
        margin-bottom: 10px
        .fb
          width: 30px
          height: 20px
          margin-right: 5px
          background-size: auto 20px
          background-repeat: no-repeat
          background-position: center
          display: inline-block
          background-image: url(/ext/lib/site/home-presupuesto/topic-card/fb-icon.svg)
        .tw
          width: 35px
          height: 20px
          background-size: auto 20px
          background-repeat: no-repeat
          background-position: center
          display: inline-block
          background-image: url(/ext/lib/site/home-presupuesto/topic-card/tw-icon.svg)