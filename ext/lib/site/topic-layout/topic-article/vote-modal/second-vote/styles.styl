  .modal-second-vote-dialog
    margin-left: -27%
    margin-top: -730px
    padding: 10px 100px
    position: absolute
    left: 50%
    top: 50%
    background-color: #fff
    z-index: 99
    -webkit-box-shadow: 0px 2px 4px 1px rgba(0,0,0,0.33)
    -moz-box-shadow: 0px 2px 4px 1px rgba(0,0,0,0.33)
    box-shadow: 0px 2px 4px 1px rgba(0,0,0,0.33)
    @media screen and (max-width: 550px)
      width: 340px
      margin-top: -580px
      margin-left: -170px
      padding: 0px
    
    .close-modal
      padding: 2px 8px
      color: #1daeec
      border: 2px solid #1daeec
      border-radius: 50px
      text-align: center
      font-size: 18px
      font-weight: 400
      margin-right: -90px
      cursor: pointer 
      float: right
      @media screen and (max-width: 550px)
        margin-top: 5px
        margin-right: 15px
      &:hover
        color: #1daeec
        
    .form-component-wrapper
      display: flex
      flex-direction: row
      flex-wrap: wrap
      justify-content: center
      align-items: space-around
      margin: 0 auto
      clear: both
      max-width: 500px
      @media screen and (max-width: 550px)
        max-width: 300px
      h3 
        text-align: center
        font-weight: 500
        font-size: 36px
        color: #1daeec
        margin: 5px
        @media screen and (max-width: 550px)
          font-size: 24px
      p
        color: rgba(0,0,0,0.5)
        font-weight: 200
        margin: 10px 0
        text-align: center
        @media screen and (max-width: 550px)
          font-size: 0.8em
      .cards-container
        display: flex
        @media screen and (max-width: 550px)
          width: 100%
        .presupuesto-topic-card
          @media screen and (max-width: 550px)
            width: 200px
            height: 225px
            .topic-location
              @media screen and (max-width: 550px)
                font-size: 0.5em
            .topic-card-body
              h1
                @media screen and (max-width: 550px)
                  font-size: 0.7em
              .topic-card-description
                @media screen and (max-width: 550px)
                  font-size: 0.5em
            .topic-card-footer
              @media screen and (max-width: 550px)
                align-items: center
              .topic-card-category
                @media screen and (max-width: 550px)
                  font-size: 0.6em
                  padding: 2px 1px
                  text-align: center
                .budget
                  @media screen and (max-width: 550px)
                    font-size: 0.6em
            
      .btn-pending
        color: #fff
        background-color: rgb(32,199,89)
        padding: 15px 20px
        border: 1px solid rgb(32,199,89)
        border-radius: 8px
        text-transform: uppercase
        font-weight: 700
        margin: 0
      .cancel
        color: rgba(0,0,0,0.5)
        cursor: pointer
        display: block
        font-weight: 200
        margin-top: 10px
        text-align: center
        text-decoration: underline
        width: 100%
        @media screen and (max-width: 550px)
          margin-bottom: 10px