.presupuesto-topic-card
  width: 260px
  overflow: visible
  cursor: pointer
        
  &.topic-joven
    .topic-card-info
      border-top-color: #FF3366
    
    .topic-card-category 
      border: 1px solid #FF3366
      color: #FF3366
      
  &.topic-area
    .topic-card-info
      border-top-color: #00B1F0
    
    .topic-card-category 
      border: 1px solid #00B1F0
      color: #00B1F0
      
  &.topic-distrito
    .topic-card-info
      border-top-color: #F59231
    
    .topic-card-category 
      border: 1px solid #F59231
      color: #F59231

  .topic-card-info
    border-top-color: #999
    position: relative

  .state
    z-index: 10
    position: absolute
    right: 0
    top: -107px
    padding: 7px 16px
    line-height: 1
    color: #fff
    font-size: 21px
    font-weight: 500
    background-color: #545454

  .topic-results
    padding: 12px 15px 9px
    color: #00adef
    border-bottom: 1px solid #00adef

    h2,
    p
      margin: 0
      color: inherit
      text-transform: uppercase
      font-weight: 600

    h2
      font-size: 20px

    p
      font-size: 14px

  .topic-location
    color: #686868
    font-size: 13px
    margin-bottom: 0.8em

    i
      margin-right: .5em

  .number
    float: right

  .topic-card-title
    font-size: 1.125em
    max-height: 2.5em
    overflow: hidden

  .topic-card-body
    flex: 1
    flex-basis: auto

  .topic-card-description
    max-height: 6.2em
    overflow: hidden
    
  
  .topic-card-links
    display: flex
    justify-content: flex-end
    align-items: center
    padding-bottom: 15px
    .fb
      width: 30px
      height: 20px
      background-size: auto 20px
      background-repeat: no-repeat
      background-position: center
      display: inline-block
      background-image: unquote("url('/ext/lib/site/home-presupuesto/topic-card/fb-icon.svg')")
    .tw
      width: 30px
      height: 20px
      background-size: auto 20px
      background-repeat: no-repeat
      background-position: center
      display: inline-block
      background-image: unquote("url('/ext/lib/site/home-presupuesto/topic-card/tw-icon.svg')")
      margin-bottom: 1px
      
  .topic-card-footer
    align-self: flex-end
    width: 100%
    position: relative
    display: flex
    justify-content: space-between
    align-items: center
    
    .topic-card-category
      border-radius: 10px
      font-size: 13px
      padding: 5px 1px
      text-align: center
      width: 88px

  .budget
    margin: 0
    color: #737373
    font-weight: 900
    line-height: 1
    font-size: 24px
  
  .topic-disabled
    position: absolute
    width: 100%
    height: 100%
    background-color: #fff
    opacity: .7
    z-index: 75

  .proyecto-seleccionado
    background: #20c759 
    color: white
    position: absolute
    right: -10px
    top: -10px
    z-index: 9
    font-size: 50px
    border-radius: 50%
  
  .block-overlay
    position: absolute
    width: 100%
    height: 100%
    z-index: 99
    background: transparent
    cursor: not-allowed
