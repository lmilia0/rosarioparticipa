.container-banner
    background-color: #F59231
    transition: top 0.2s ease-in-out
    position: fixed
    bottom: 0
    width: 100%
    display: flex
    // flex-wrap: wrap
    flex-direction: column
    align-items: center
    justify-content: center
    height: 150px
    padding: 20px
    animation-name: bounce
    animation-duration: 1s
    z-index: 1000
    @media (max-width: 425px)
      justify-content: flex-end
      padding: 0 10px 15px

    .closes
      background-color: #f59231
      border-style: none
      color: #fff
      // align-self: flex-end
      font-size: 20px
      border: 1px solid transparent
      cursor: pointer
      border-radius: 50%
      padding: 0px 10px 2px
      right: 10px
      position: absolute
      top: 10px
      &:hover
        border: 1px solid #ffb56b

    h3
      color: #FFFFFF
      text-align: center
      margin: 10px 0
      @media (max-width: 425px)
          font-size: 1em
          width: 80%

@css {
  @-webkit-keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-1px); }
    60% { transform: translateY(-1px); }
  }

  @-moz-keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-1px); }
    60% { transform: translateY(-1px); }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-1px); }
    60% { transform: translateY(-1px); }
  }
}
